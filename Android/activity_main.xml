<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#006491"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Water Tank"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/tankView"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        app:cardBackgroundColor="#7D8080"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/block1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#15C9DD" />
            <TextView
                android:id="@+id/block2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="#62D2DF" />
            <TextView
                android:id="@+id/block3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="#82D8E2" />
            <TextView
                android:id="@+id/block4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="#8EE5EC" />
            <TextView
                android:id="@+id/block5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="#AAEDF7" />

            <TextView
                android:id="@+id/block6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="#C7ECF3" />
            <TextView
                android:id="@+id/block7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="#D1F6FD" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/startMotor"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/tankView"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:text="Start"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="20dp" />
    <Button
        android:id="@+id/stopMotor"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/tankView"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        android:text="STOP"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="20dp" />

</RelativeLayout>